@model IEnumerable<Vidly.Models.Customer>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Customers</h1>

@if (Model.Count() == 0)
{
    <text>We don't have any customers yet.</text>
}
else
{
    <table class="table">
        <tr>
            <th>
                Customer
            </th>
            <th>
                Membership Type
            </th>
        </tr>

        @foreach (var customer in Model)
        {
            <tr>
                <td>
                    @Html.ActionLink(linkText: customer.Name, actionName: "Details", routeValues: new { id = customer.Id })
                </td>
                <td>@customer.MembershipType.Name</td>
            </tr>
        }
    </table>
}