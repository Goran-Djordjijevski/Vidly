@model IEnumerable<Vidly.Models.Movie>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Movies</h1>

@if (Model.Count() == 0)
{
    <text>We don't have any movies yet.</text>
}
else
{
    <table class="table">
        <tr>
            <th>
                Movie
            </th>
            <th>
                Genre
            </th>
        </tr>

        @foreach (var movie in Model)
        {
    <tr>
        <td>
            @Html.ActionLink(linkText: movie.Name, actionName: "Details", routeValues: new { id = movie.Id })
        </td>
        <td>
            @movie.Genre.Name
        </td>
    </tr>
        }
    </table>
}